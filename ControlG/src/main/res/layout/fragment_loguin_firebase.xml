<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loguin_b"
    tools:context=".Fragment.LoguinFirebaseFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="374dp"
        android:layout_height="171dp"

        android:layout_marginBottom="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/triangulo_transparente"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/ediEmailLoguinF"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cuadro_texto_blanco"
            android:drawableLeft="@mipmap/ic_email"
            android:ems="10"
            android:hint="@string/s_email_user"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="32dp" />

        <EditText
            android:id="@+id/ediPasswordLoguinF"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:background="@drawable/cuadro_texto_blanco"
            android:drawableLeft="@mipmap/ic_pass"
            android:ems="10"
            android:hint="@string/s_pass_loguin"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/butLoguinF"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/register_button"
            android:gravity="center"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textStyle="normal" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imaLoginF"
        android:layout_width="238dp"
        android:layout_height="135dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/loguin_white"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />


</android.support.constraint.ConstraintLayout>