<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.UsuarioFragment">


    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="386dp"
        android:layout_height="130dp"
        android:background="@color/color_title_imagen"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgUsuarioG"
            android:layout_width="155dp"
            android:layout_height="119dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="onClick"
            android:src="@drawable/ic_user_loguin"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/imgUsuarioG2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:onClick="onClick"
            android:src="@drawable/ic_camera_alt_black_24dp" />
    </TableRow>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="358dp"
            android:layout_height="161dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_user_guia_24dp" />

                <EditText
                    android:id="@+id/ediNameUserR"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="15"
                    android:hint="@string/s_name_user"
                    android:inputType="textPersonName" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_email_guia_24dp" />

                <EditText
                    android:id="@+id/ediEmailUserR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:hint="@string/s_email_user"
                    android:inputType="textPersonName" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="31dp"
                    android:layout_height="25dp"
                    app:srcCompat="@mipmap/ic_pass" />

                <EditText
                    android:id="@+id/ediPasswordUserR"
                    android:layout_width="264dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:hint="@string/s_pass_loguin"
                    android:inputType="textPassword" />
            </TableRow>

        </TableLayout>

        <TableRow
            android:layout_width="332dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/texId"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="id"
                android:textColor="@android:color/background_light"
                android:visibility="visible" />
        </TableRow>

    </LinearLayout>
</LinearLayout>