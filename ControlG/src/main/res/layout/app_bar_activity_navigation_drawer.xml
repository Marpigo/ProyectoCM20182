<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityNavigationDrawer">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/AppTheme"
            app:subtitleTextColor="@color/cardview_light_background"
            app:title="Control G"
            app:titleTextColor="@color/cardview_light_background" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_activity_navigation_drawer" />


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"

        app:fab_icon="@drawable/ic_add_circle_black_24dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLevante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorPressed="@android:color/holo_blue_bright"
            app:fab_icon="@drawable/ic_cow_head_icon"
            app:fab_size="normal"
            app:fab_title="Insumos" />


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabInsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorPressed="@android:color/holo_blue_bright"
            app:fab_icon="@drawable/ic_insumo"
            app:fab_size="normal"
            app:fab_title="Levante" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAgendear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorPressed="@android:color/holo_blue_bright"
            app:fab_icon="@drawable/ic_diary"
            app:fab_size="normal"
            app:fab_title="Agendar" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>





</android.support.design.widget.CoordinatorLayout>