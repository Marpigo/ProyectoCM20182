<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorButtonNormal"
    tools:context=".Fragment.InsumoGestionarFragment"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent_material_light_1x"
        android:gravity="right|center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/texManageI"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/s_menu_insumo"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/imaNewI"
            android:layout_width="49dp"
            android:layout_height="43dp"
            android:onClick="onClick"
            android:src="@drawable/ic_add"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/imaSaveI"
            android:layout_width="57dp"
            android:layout_height="42dp"
            android:onClick="onClick"
            android:src="@drawable/ic_save"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/imaDeleteI"
            android:layout_width="58dp"
            android:layout_height="42dp"
            android:onClick="onClick"
            android:src="@drawable/ic_delete"
            tools:ignore="OnClick" />

    </TableRow>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableRow"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_insumo_detalle"
                android:textColor="@color/colorPrimaryDark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/ediInsumoI"
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:background="@drawable/cuadro_texto_blanco"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_presentacion_detalle"
                android:textColor="@color/colorPrimaryDark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/ediPresentacionI"
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:background="@drawable/cuadro_texto_blanco"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="349dp"
        android:layout_height="26dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:text="@string/s_filtro_referencia_detalle"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        tools:layout_editor_absoluteX="18dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_linea_detalle"
                android:textColor="@color/colorPrimaryDark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <Spinner
                android:id="@+id/spinnerLineaI"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:background="@drawable/cuadro_texto_blanco" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_marca_detalle"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/ediMarcaI"
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:background="@drawable/cuadro_texto_blanco"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_especies_detalle"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <Spinner
                android:id="@+id/spinnerEspecieI"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:background="@drawable/cuadro_texto_blanco" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/idImagen"
                android:layout_marginTop="11dp"
                android:background="@android:color/darker_gray" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>